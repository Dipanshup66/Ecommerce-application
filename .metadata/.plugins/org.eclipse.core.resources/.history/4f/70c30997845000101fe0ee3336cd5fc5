package com.dipanshu.common.service;
package com.dipanshu.common.service.impl;

import com.dipanshu.common.repository.BaseRepository;
import com.dipanshu.common.service.BaseService;
import java.util.List;

public class BaseServiceImpl<T, ID> implements BaseService<T, ID> {
	protected final BaseRepository<T, ID> repository;

	public BaseServiceImpl(BaseRepository<T, ID> repository) {
		this.repository = repository;
	}

	@Override
	public T save(T entity) {
		return repository.save(entity);
	}

	@Override
	public T findById(ID id) {
		return repository.findById(id).orElse(null);
	}

	@Override
	public List<T> findAll() {
		return repository.findAll();
	}

	@Override
	public void deleteById(ID id) {
		repository.deleteById(id);
	}
}